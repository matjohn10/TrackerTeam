// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Category {
  todo
  doing
  done
}

model User {
  id    String @id @unique
  email String @unique

  firstname    String?
  lastname     String?
  picturelink  String?        @unique
  colorSchema  String         @default("default")
  WorksOn      WorksOn[]
  Messages     Message[]
  taskCreated  Task[]         @relation("created")
  taskModified Task[]         @relation("modified")
  Notification Notification[]
}

model Project {
  id       String @id @unique
  name     String @unique
  leaderId String
  Tasks    Task[]

  messages Message[]
  WorksOn  WorksOn[]
}

model Task {
  id               Int      @id @unique @default(autoincrement())
  title            String
  description      String   @db.LongText
  lastModifiedDate DateTime @default(now())
  category         String
  createdBy        User     @relation("created", fields: [createdId], references: [id])
  createdId        String
  lastModifiedBy   User     @relation("modified", fields: [lastModifiedId], references: [id])
  lastModifiedId   String
  Project          Project? @relation(fields: [projectId], references: [id])
  projectId        String?

  @@index([projectId])
  @@index([createdId])
  @@index([lastModifiedId])
}

model WorksOn {
  id        Int     @id @unique @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  @@index([userId])
  @@index([projectId])
}

model Message {
  id      String   @id @unique
  date    DateTime @default(now())
  content String   @db.MediumText

  Project   Project @relation(fields: [projectId], references: [id])
  projectId String

  like     Int    @default(0)
  heart    Int    @default(0)
  eyes     Int    @default(0)
  dislike  Int    @default(0)
  User     User   @relation(fields: [senderId], references: [id])
  senderId String

  @@index([projectId])
  @@index([senderId])
}

model Reactions {
  id      Int @unique @default(autoincrement())
  like    Int @default(0)
  heart   Int @default(0)
  eyes    Int @default(0)
  dislike Int @default(0)
}

model Notification {
  id      Int    @unique @default(autoincrement())
  message String
  user    User   @relation(fields: [userId], references: [id])
  userId  String

  @@index([userId])
}
